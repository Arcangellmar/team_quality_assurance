<div class="container-fluid" style="background-color: #eccfa3; min-height: 100vh">
    <div class="container p-5">
        <div class="row align-items-center p-4" style="background-color: white; margin: 0 auto">
            <div class="col-12 mb-5 text-md-left text-center">
                <form action="" class="form-inline justify-content-between">
                    <h4>Solicitudes de información</h4>
                    <p>Filtrar por: </p>
                    <select class="form-control col-12 col-md-3 my-1" name="time" id="time">
                        <option hidden selected disabled>Más Reciente</option>
                        <option>7 dias</option>
                        <option>30 dias</option>
                        <option>Más Reciente</option>
                    </select>
                    <select class="form-control col-12 col-md-3 my-1" name="type" id="type">
                        <option hidden selected disabled>Todos</option>
                        <option>Correo de solicitud enviado</option>
                        <option>Usuario contactado</option>
                        <option>Todos</option>
                    </select>
                </form>
            </div>

            <div class="col-12">
                <div class="accordion" id="accordionExample">
                    {{#each table}}
                        <div class="card">
                            <div class="card-header" id="headingOne">
                                <h2 class="mb-0">
                                    <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#id_{{id}}" aria-expanded="true">
                                        <div class="d-md-flex justify-content-between text-center">
                                            <p>{{full_name}}</p>
                                            <p>Correo de solicitud enviado</p>
                                            <p>01/05/21</p>
                                            <p>{{registred_at}}</p>
                                        </div>
                                    </button>
                                </h2>
                            </div>

                            <div id="id_{{id}}" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-12 col-md">
                                            <ul>
                                                <li>Nombre completo: {{full_name}}</li>
                                                <li>Compañia: {{company_name}}</li>
                                                <li>Número Telefónico: {{phone_number}}</li>
                                            </ul>
                                        </div>
                                        <div class="col-12 col-md">
                                            <ul>
                                                <li>Correo electrónico: {{email}}</li>
                                                <li>Fecha de contacto: {{timeago table.registred_at}}</li>
                                            </ul>
                                        </div>
                                        <div class="col-12 col-md text-center">
                                            <p>Acciones</p>
                                            <botton class="delete" href="/admin/delete/{{id}}"><img src="/images/delete_admin.png" alt="" class="d-inline"></botton>
                                            <botton class="check" href="/admin/update/{{id}}"><img src="/images/check_admin.png" alt="" class="d-inline"></botton>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{else}}
                        <h2>Lista Vacia</h2>
                    {{/each}}
                </div>
            </div>
            <div class="col-12 my-5">
                <nav>
                    <ul class="pagination">
                        <li class="page-item"><a class="page-link text-dark" href="#">Atras</a></li>

                        <li class="page-item"><a class="page-link text-dark" href="#">Siguiente</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

