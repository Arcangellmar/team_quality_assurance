		<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
		<script>
			
			$(".delete").click(function(){
				Swal.fire({
					html: `<p style="color: white">¿Desea eliminar la solicitud?</p>`,
					background: '#4e6672',

					showCancelButton: true,
					confirmButtonColor: '#3085d6',
					cancelButtonColor: '#d33',
					confirmButtonText: 'Si',
					cancelButtonText: 'No'
					}).then((result) => {
					if (result.isConfirmed) {
						$(this).parent().parent().parent().parent().parent().remove();

						var url = $(this).data('url');
						window.open(url, "_self");

						Swal.fire({
							icon: 'success',
							html: `<p style="color: white">La solicitud se eliminó correctamente.</p>`,
							confirmButtonColor: '#4e6672',
							background: '#4e6672',
						});
					}
				});
			});

			$(".check").click(function(){
				Swal.fire({
					html: `<p style="color: white">¿Ha contactado al solicitante?</p>`,
					background: '#4e6672',

					showCancelButton: true,
					confirmButtonColor: '#3085d6',
					cancelButtonColor: '#d33',
					confirmButtonText: 'Si',
					cancelButtonText: 'No'
					}).then((result) => {
					if (result.isConfirmed) {
						Swal.fire('Datos guardados');
					}
				});
			});
			
		</script>
		<script>
			$(function () {
				$('[data-toggle="tooltip"]').tooltip()
			})
		</script>
	</body>
</html>